@model Snack

<div class="col-sm-3 card">
    <div class="thumbnail">
        <img style="border: 1px solid grey; border-radius:1px; padding:1em" width="240" height="150" class="img-rounded" src="@Model.MainImage" />
    </div>
    <div class="caption">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            <a asp-controller="Snack" asp-action="Details" asp-route-snackid="@Model.Id">@Model.Name</a>
        </h3>
        <p>@Model.ShorDescription</p>
    </div>
    <div class="addToCart text-right">
        <p class="button">
            <a class="btn btn-outline-primary" id="cartButton" asp-controller="ShoppingCart" asp-action="AddItem" asp-route-snackid="@Model.Id">
                <span class="material-icons">add</span> Add to cart
            </a>
        </p>
    </div>
</div>