@model IEnumerable<LanchesWeb.Models.Snack>

@{
    ViewData["Title"] = "List";
}

<h1>@ViewData["Title"]</h1>
<h2>All burgers</h2>

@foreach (Snack snack in Model)
{
    <div>
        <h4>Burger: @snack.Name</h4>
        <p>
            <img src="@snack.MainImage" />
        </p>
        <p>Price: @snack.Price.ToString("c")</p>
    </div>
}

