@model RegisterViewModel

<table>
    <tr>
        <td><img src="~/img/login1.jpg" alt="Login" class="center-block" /></td>
        <td>
            <div class="row loginForm">
                <div class="col-sm-12 ">
                    <h2>Register to order now</h2>
                    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                        <p>Enter username and password</p>
                        <hr />
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="Username" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group pull-right formPullRightButton">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-success" value="Login" />
                            </div>
                        </div>
                    </form>
                    @if (ViewBag != null)
                    {
                        if (ViewBag.Errors != null)
                        {
                            @foreach (var item in ViewBag.Errors)
                            {
                                <p class="text-danger">@item.Description</p>
                            }
                        }
                    }
                </div>
            </div>
        </td>
    </tr>
</table>
